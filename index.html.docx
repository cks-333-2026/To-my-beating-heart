<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>When You Need Me</title>

  <!-- PWA bits -->
  <meta name="theme-color" content="#0b0b0c" />
  <link rel="manifest" href="manifest.json" />

  <style>
    :root{
      --bg:#0b0b0c; --fg:#f2f2f2; --muted:#b9b9b9; --line:rgba(255,255,255,.10);
      --card:rgba(255,255,255,.04);
    }
    html,body{height:100%; margin:0; background:var(--bg); color:var(--fg); font-family: ui-serif, Georgia, "Times New Roman", serif;}
    .wrap{max-width:520px; margin:0 auto; padding:28px 18px 44px;}
    .title{font-size:26px; letter-spacing:.2px; margin:18px 0 6px;}
    .sub{color:var(--muted); font-size:14px; line-height:1.5; margin:0 0 20px;}
    .list{display:flex; flex-direction:column; gap:10px; margin-top:18px;}
    button.item{
      width:100%; text-align:left; background:var(--card); border:1px solid var(--line); color:var(--fg);
      padding:16px 14px; border-radius:16px; font-size:16px; line-height:1.25; cursor:pointer;
      transition:transform .06s ease;
    }
    button.item:active{transform:scale(.99);}
    .pill{display:inline-block; font-size:12px; color:var(--muted); margin-top:6px;}
    .screen{position:fixed; inset:0; background:rgba(11,11,12,.96); display:none; align-items:center; justify-content:center; padding:16px;}
    .modal{width:min(920px,100%); background:rgba(255,255,255,.03); border:1px solid var(--line); border-radius:18px; overflow:hidden;}
    .topbar{display:flex; align-items:center; justify-content:space-between; padding:12px 14px; border-bottom:1px solid var(--line);}
    .topbar .t{font-size:14px; color:var(--muted)}
    .x{background:transparent; color:var(--fg); border:1px solid var(--line); border-radius:12px; padding:8px 10px; cursor:pointer;}
    .stage{padding:18px 14px;}
    .pause{display:flex; align-items:center; justify-content:center; height:120px; color:var(--muted); font-size:14px; letter-spacing:.2px;}
    .player{aspect-ratio:9/16; width:min(420px,100%); margin:0 auto; border-radius:16px; overflow:hidden; border:1px solid var(--line);}
    iframe{width:100%; height:100%; border:0;}
    .actions{display:flex; gap:10px; justify-content:center; padding:14px; border-top:1px solid var(--line);}
    .btn{background:transparent; color:var(--fg); border:1px solid var(--line); border-radius:14px; padding:10px 12px; cursor:pointer; font-size:14px;}
    .btn.primary{background:rgba(255,255,255,.08);}
    .gate{margin-top:18px; background:rgba(255,255,255,.03); border:1px solid var(--line); border-radius:16px; padding:14px;}
    input{width:100%; padding:12px 12px; border-radius:12px; border:1px solid var(--line); background:rgba(0,0,0,.2); color:var(--fg); font-size:14px;}
    .note{color:var(--muted); font-size:12px; margin-top:8px; line-height:1.4;}
    .hide{display:none;}
  </style>
</head>
<body>
  <div class="wrap">
    <div class="title">I’m here. Choose how you feel.</div>
    <p class="sub">This is private. Take it slowly.</p>

    <!-- PASSWORD GATE -->
    <div id="gate" class="gate">
      <input id="pw" type="password" placeholder="Password" />
      <p class="note">Hint: a word only you two use. (Case-sensitive.)</p>
      <button class="btn primary" style="margin-top:10px;" onclick="unlock()">Enter</button>
    </div>

    <!-- CONTENT -->
    <div id="content" class="hide">
      <div class="list" id="list"></div>
      <p class="note" style="margin-top:18px;">Tip: Add this to your Home Screen so it feels like an app.</p>
    </div>
  </div>

  <!-- MODAL -->
  <div class="screen" id="screen">
    <div class="modal">
      <div class="topbar">
        <div class="t" id="topicTitle">—</div>
        <button class="x" onclick="closeModal()">Close</button>
      </div>
      <div class="stage">
        <div class="pause" id="pause">Take a second.</div>
        <div class="player" id="player" style="display:none;"></div>
      </div>
      <div class="actions">
        <button class="btn" id="stayBtn" onclick="playAfter()">Stay a little longer</button>
        <button class="btn primary" onclick="closeModal()">That’s enough for now</button>
      </div>
    </div>
  </div>

<script>
  // ======= EDIT THESE 2 THINGS ONLY =======

  // 1) Change password
  const PASSWORD = "princess";

  // 2) Put your video embed links here
  // For now we use demo placeholders (we'll replace in Phase 4).
  const TOPICS = [
    { title:"When the world feels heavy", main:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0", after:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0" },
    { title:"When you feel lonely in a room", main:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0", after:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0" },
    { title:"When you can’t sleep", main:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0", after:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0" },
    { title:"Open only when you really need me", main:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0", after:"https://www.youtube.com/embed/dQw4w9WgXcQ?rel=0" }
  ];

  // ======= APP LOGIC (DON'T TOUCH) =======
  let current = null;
  let afterPlayed = false;

  const list = document.getElementById("list");
  function render(){
    list.innerHTML = "";
    TOPICS.forEach((t, i) => {
      const b = document.createElement("button");
      b.className = "item";
      b.innerHTML = `<div>${t.title}</div><div class="pill">tap</div>`;
      b.onclick = () => openTopic(i);
      list.appendChild(b);
    });
  }

  function unlock(){
    const v = document.getElementById("pw").value;
    if(v === PASSWORD){
      document.getElementById("gate").style.display = "none";
      document.getElementById("content").classList.remove("hide");
      render();
    } else {
      alert("Try again.");
    }
  }

  function openTopic(i){
    current = TOPICS[i];
    afterPlayed = false;
    document.getElementById("topicTitle").textContent = current.title;
    document.getElementById("screen").style.display = "flex";

    document.getElementById("pause").style.display = "flex";
    const p = document.getElementById("player");
    p.style.display = "none";
    p.innerHTML = "";

    document.getElementById("stayBtn").style.opacity = 0.45;
    document.getElementById("stayBtn").style.pointerEvents = "none";

    setTimeout(() => playMain(), 1200);
  }

  function playMain(){
    document.getElementById("pause").style.display = "none";
    const p = document.getElementById("player");
    p.style.display = "block";
    p.innerHTML = `<iframe src="${current.main}" allow="fullscreen; picture-in-picture" allowfullscreen></iframe>`;

    document.getElementById("stayBtn").style.opacity = 1;
    document.getElementById("stayBtn").style.pointerEvents = "auto";
  }

  function playAfter(){
    if(!current.after || afterPlayed) return;
    afterPlayed = true;
    document.getElementById("player").innerHTML =
      `<iframe src="${current.after}" allow="fullscreen; picture-in-picture" allowfullscreen></iframe>`;
  }

  function closeModal(){
    document.getElementById("screen").style.display = "none";
    document.getElementById("player").innerHTML = "";
  }

  // Register service worker (makes it more app-like)
  if ('serviceWorker' in navigator) {
    navigator.serviceWorker.register('service-worker.js');
  }
</script>
</body>
</html>
